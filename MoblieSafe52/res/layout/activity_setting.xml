<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res/com.itheima52.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />
    <!-- 自定义控件和属性 -->

    <com.itheima52.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:desc_of="自动更新设置已关闭"
        itheima:desc_on="自动更新设置已开启"
        itheima:title="设置选项" >
    </com.itheima52.mobilesafe.view.SettingItemView>

    <com.itheima52.mobilesafe.view.SettingItemView
        android:id="@+id/siv_num_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:desc_of="归属地显示已关闭"
        itheima:desc_on="归属地显示已开启"
        itheima:title="电话归属地显示设置" >
    </com.itheima52.mobilesafe.view.SettingItemView>

    <com.itheima52.mobilesafe.view.SettingSelectView
        android:id="@+id/siv_style_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.itheima52.mobilesafe.view.SettingSelectView>
    
    <com.itheima52.mobilesafe.view.SettingSelectView
        android:id="@+id/siv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.itheima52.mobilesafe.view.SettingSelectView>
    
     <com.itheima52.mobilesafe.view.SettingItemView
         
        android:id="@+id/siv_black_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:desc_of="黑名单拦截已关闭"
        itheima:desc_on="黑名单拦截已开启"
        itheima:title="黑名单拦截设置" >
    </com.itheima52.mobilesafe.view.SettingItemView>

</LinearLayout>